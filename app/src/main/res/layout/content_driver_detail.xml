<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shahzad.ridesafepk.DriverDetail"
    tools:showIn="@layout/activity_driver_detail">





    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/icon"
            android:layout_width="109dp"
            android:layout_height="67dp"
            android:src="@drawable/pic3"
            app:border="true"
            app:border_color="#2c3e50"
            app:border_width="2dp"
            app:shadow="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
            android:textSize="18sp"
        android:focusable="false"
        android:textColor="#0c0b0b" />



    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.33Km away"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:focusable="false"
        android:textColor="#3f3636"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="03016973691"
        android:focusable="false"
        android:textColor="#3f3636"
        android:layout_marginBottom="2dp" />

    <RatingBar
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:id="@+id/rbRating"
        android:numStars="5"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        />




    <Button
        android:id="@+id/btnContactDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#2c3e50"
        android:text="Hire Me"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </LinearLayout>


</RelativeLayout>
